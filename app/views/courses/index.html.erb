<h1>課程列表</h1>
 
 <%=form_tag courses_path,method:"get" do%>
 name<%=text_field_tag :name%>
 teacher<%=text_field_tag :teacher%>
 time<%=text_field_tag :time%>
 <%=submit_tag "search"%>
 <% end %>


<%= link_to 'New Course', new_course_path %>


<table>
  <tr>
    <th>課程</th>
    <th>老師</th>
    <th>時間</th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.teacher %></td>
      <td><%= course.time   %></td>
      
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Destory', course_path(course),method: :"delete", data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>